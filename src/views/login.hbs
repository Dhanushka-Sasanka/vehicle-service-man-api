<div class="login-container animated fadeInDown bootstrap snippets bootdeys">
    <div class="loginbox bg-white">
        <div class="loginbox-title">SIGN IN</div>

        {{#if message}}
            <div class="loginbox-textbox">
                <div class="alert alert-success" id="register-alert" role="alert">
                    User Registration Success..!
                </div>
            </div>
            <script>
                setTimeout(() => {
                    document.getElementById('register-alert').remove();
                }, 5000);
            </script>

        {{/if}}

        <form method="POST" action="/auth/sign-in">
            <div class="loginbox-textbox">
                <input type="text" class="form-control" placeholder="Email" name="email">
            </div>
            <div class="loginbox-textbox">
                <input type="password" class="form-control" placeholder="Password" name="password">
            </div>

            <div class="loginbox-submit">
                <button type="submit" class="btn btn-default btn-block btn-danger">Login</button>
            </div>
        </form>

        <div class="loginbox-forgot">
            <a href="#">Forgot Password?</a>
        </div>

